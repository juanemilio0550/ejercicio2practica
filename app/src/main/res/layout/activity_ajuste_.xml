<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F2F2"
    android:orientation="vertical"
    android:id="@+id/Constrai"
    tools:context=".Ajuste_Activity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#2962ff"
android:layout_marginTop="15dp"
        android:textSize="35dp"
        android:text=" Backgraoud color">

    </TextView>

    <!-- colores informacion Actividad Digno -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
       android:layout_gravity="center"
        android:textColor="#000000"
        android:fontFamily="serif-monospace"
        android:textSize="25dp"
        android:text="Digno">

    </TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:orientation="horizontal">


    <Button
        android:onClick="enviarColorBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#42a5f5"
         />

    <Button
        android:onClick="enviarColorGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ede7f6"
        />

    <Button
        android:onClick="enviarColorYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffeb3b"
        />
        <Button
            android:onClick="VerCambioDigno"
            android:layout_marginLeft="25dp"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:background="@drawable/lupa"
            />
    </LinearLayout>

    <!-- colores informacion Actividad juan -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:fontFamily="serif-monospace"
        android:textSize="25dp"
        android:text="Juan ">

    </TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:orientation="horizontal">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="enviarColorIndigo"
            android:background="#3d5afe"/>

        <Button
            android:onClick="enviarColorBrown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#bcaaa4"
            />

        <Button
            android:onClick="enviarColorVerdeOscuro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#8ebc52"
            />
        <Button
            android:onClick="VerCambioJuan"
            android:layout_marginLeft="25dp"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:background="@drawable/lupa"
            />
    </LinearLayout>

    <!-- colores informacion Actividad jesue -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:fontFamily="serif-monospace"
        android:textSize="25dp"
        android:text="Josue">

    </TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:orientation="horizontal">


        <Button
            android:onClick="enviarColorRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E01313"
            />

        <Button
            android:onClick="enviarColorverdeClaro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#64DD17"
            />

        <Button
            android:onClick="enviarColorMarron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#894d27"
            />
        <Button
            android:onClick="VerCambioJosue"
            android:layout_marginLeft="25dp"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:background="@drawable/lupa"
            />
    </LinearLayout>

</LinearLayout>